{
  "expo": {
    "name": "lifelong-app",
    "slug": "lifelong-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lifelongapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.paramsingh.lifelongapp",
      "appleTeamId": "9ZQNRDQX22",
      "usesAppleSignIn": true,
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "We use the camera to take food photos.",
        "NSPhotoLibraryUsageDescription": "We save food photos to your library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.param.lifelongapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "18.0"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you log your meals.",
          "cameraPermission": "The app accesses your camera to let you log your meals."
        }
      ],
      "./plugins/withPodfileDeploymentTarget",
      "expo-apple-authentication",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
